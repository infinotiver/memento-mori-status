{
  "name": "memento-mori-status",
  "displayName": "memento-mori-status",
  "description": "Displays day/year/life progress in the status bar",
  "publisher": "infinotiver",
  "repository": {
    "type": "git",
    "url": "https://github.com/infinotiver/memento-mori-status.git"
  },
  "icon": "icon.png",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mementoMori.showStats",
        "title": "Memento Mori: Show Full Stats"
      },
      {
        "command": "mementoMori.setBirthDate",
        "title": "Memento Mori: Set Birth Date"
      },
      {
        "command": "mementoMori.resetConfig",
        "title": "Memento Mori: Reset Configuration"
      }
    ],
    "configuration": {
      "title": "Memento Mori",
      "properties": {
        "mementoMori.birthDate": {
          "type": "string",
          "default": "1990-01-01",
          "description": "Your birth date (YYYY-MM-DD)"
        },
        "mementoMori.lifeExpectancy": {
          "type": "number",
          "default": 80,
          "description": "Expected lifespan in years"
        },
        "mementoMori.displayFormat": {
          "type": "string",
          "default": "Day %dayProgress% · Year %yearProgress% · Life %lifeProgress%",
          "description": "Tokens: %dayProgress%, %dayRemaining%, %monthProgress%, %monthRemaining%, %yearProgress%, %yearRemaining%, %lifeProgress%, %lifeRemaining%, %ageYears%, %ageYearsMonthsDays%, %daysLived%, %daysLeftLife%, %daysUntilBirthday%; legacy placeholders also supported: {dayProgress}, {monthProgress}, {yearProgress}, {lifeProgress}"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
